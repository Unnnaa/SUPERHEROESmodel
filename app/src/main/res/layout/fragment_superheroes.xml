<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="150dp"
>

    <FrameLayout
            android:layout_width="0dp"
            android:layout_height="0dp" android:id="@+id/frameLayout" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

    </FrameLayout>
    <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp" app:srcCompat="@mipmap/ic_launcher" android:id="@+id/picture"
            android:contentDescription="TODO"
            app:layout_constraintEnd_toStartOf="@+id/gender" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="34dp" android:layout_marginRight="34dp"/>
    <TextView
            android:layout_width="106dp"
            android:layout_height="0dp" android:id="@+id/name"
            app:layout_constraintStart_toEndOf="@+id/picture"
            android:layout_marginLeft="32dp" android:layout_marginStart="32dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/power"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="0dp" android:id="@+id/gender"
            app:layout_constraintTop_toBottomOf="@+id/power" app:layout_constraintStart_toEndOf="@+id/picture"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="121dp"
            android:layout_marginRight="121dp"/>
    <TextView
            android:layout_width="106dp"
            android:layout_height="0dp" android:id="@+id/power"
            app:layout_constraintStart_toEndOf="@+id/picture"
            android:layout_marginLeft="32dp" android:layout_marginStart="32dp"
            app:layout_constraintTop_toBottomOf="@+id/name" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/gender"/>
</android.support.constraint.ConstraintLayout>
